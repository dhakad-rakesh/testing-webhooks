<section class="main-section">
  <div class="ac-heading">
    <h2 class="text-center">
      user account opening
    </h2>
  </div>
  <div class="account-fields width60">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "signup_form"}) do |f| %>
      <div class="full-width">
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>First name* </label>
          <%= f.text_field :first_name, class: 'form-control', placeholder: "First Name" %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>Last name* </label>
          <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>
        </div>
      </div>

      <div class="full-width">
        <div class="col-md-12 col-sm-12 col-xs-12 margin">
          <label>Username* </label>
          <%= f.text_field :username, class: 'form-control', placeholder: "Username" %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
        </div>
      </div>

      <div class="full-width">
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>Password* </label>
          <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
        </div>
      
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>Repeat password* </label>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "Password Confirmation" %>
        </div>  
      </div>

      <div class="full-width">
        <div class="col-md-12 col-sm-12 col-xs-12 margin">
          <label>Email address* </label>
          <%= f.text_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>
      </div>

      <div class="full-width">
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>Street* </label>
          <%= f.text_field :street, class: 'form-control', placeholder: "Street" %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>House number </label>
          <%= f.text_field :house_number, class: 'form-control', placeholder: "House Number" %>
        </div>
      </div>

      <div class="full-width">
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>Town/City* </label>
          <%= f.text_field :town_city, class: 'form-control', placeholder: "Town/City" %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>ZIP code* </label>
          <%= f.text_field :zip_code, class: 'form-control', placeholder: "Zip Code" %>
        </div>
      </div>

      <div class="full-width">
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>Country* </label>
          <%= f.select(:country, options_for_select(ISO3166::Country.all.collect { |c| [c.name, c.alpha3, { 'data-country-code' => c.country_code }] }.sort, 'TUN'), {}, {class: 'form-control'}) %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>Phone Number </label>
          <%= f.text_field :phone_number, class: 'form-control', placeholder: "Phone Number" %>
        </div>
      </div>

      <div class="full-width">
        <div class="col-md-4 col-sm-4 col-xs-12 margin">
          <label>Confirmation* </label>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12 margin">
          <div class="refferal-code">
            <label class="checkbox">I am at least 18 years old, I have read and accept <%= link_to t('terms_and_conditions'), terms_path %> and <%= link_to t('privacy_policy'), privacy_policy_path %>
              <input type="checkbox" name="age_confirmation">
              <span class="checkmark"></span>
            </label>
          </div>

          <div class="refferal-code">
            <label class="checkbox">I would like to receive information about offers and promotions on Bwinner's products
              <input type="checkbox" name="recieve_offer_confirmation">
              <span class="checkmark"></span>
            </label>
          </div>
        </div>
      </div>

      <div class="full-width security-alignment ">
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <%#= recaptcha_tags %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
        </div>
      </div>

      <div class="full-width">
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <label>Fields marked with an asterisk(*) are required </label>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 margin">
          <div class="pull-right create-account">
            <%= button_tag "Create Account", class: 'green-btn' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script>
  validateSignup();
</script>