<div class="col-lg-12">
  <div class="ibox float-e-margins listing-filter">
    <div class="ibox-title">
      <h5>Filter</h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>
      </div>
    </div>
    <div class="ibox-content" style="display: block;">
      <table class="filter-table">
        <tr>
          <th>Registration Date</th>
          <th>Username</th>
          <!-- <th>Player Number</th> -->
          <th>Last Login Date</th>
          <!-- <th>Currency</th> -->
        </tr>
        <tr>
          <td>
            <%= text_field_tag :registration_date, nil, class: 'date-range form-control', placeholder: 'Select date range', data: { behavior: 'daterangepicker' }, autocomplete: "off" %>
            <%= hidden_field_tag :reg_start_date, nil, class: 'start-date' %>
            <%= hidden_field_tag :reg_end_date, nil, class: 'end-date' %>
          </td>
          <td>
            <input type="search" name="query" id="query" class="form-control" placeholder="Username" value="<%= params[:query] %>">
          </td>
   <!--        <td>
            <input type="search" name="id" id="id" class='form-control' placeholder="Player Number">
          </td> -->
          <td>
            <%= text_field_tag :last_sign_in_at, nil, class: 'date-range form-control', placeholder: 'Select date range', data: { behavior: 'daterangepicker' }, autocomplete: "off" %>
            <%= hidden_field_tag :last_sign_in_start_date, nil, class: 'start-date' %>
            <%= hidden_field_tag :last_sign_in_end_date, nil, class: 'end-date' %>
          </td>
      <!--     <td>
            <%#= select_tag 'currency', options_for_currency, { class: "form-control", :prompt => "All" } %>
          </td> -->
        </tr>

        <tr>
          <!-- <th>Phone</th> -->
          <th>Min Balance</th>
          <th>Max Balance</th>
<!--           <th>Country</th>
          <th>City</th> -->
          <th>User Email </th>
        </tr>
        <tr>
<!--           <td>
            <input type="search" name="phone_no" id="phone_no" class='form-control only-numeric' placeholder="Phone">
          </td> -->
          <td>
            <input type="search" name="min_amt" id="min_amt" class='form-control only-numeric' placeholder="Min balance">
          </td>
          <td>
            <input type="search" name="max_amt" id="max_amt" class='form-control only-numeric' placeholder="Max balance">
          </td>
 <!--          <td>
            <%#= select_tag 'country', country_filter_options, { class: "form-control", :prompt => "All" } %>
          </td>
          <td>
            <input type="search" name="city" id="city" class='form-control' placeholder="City">
          </td> -->
          <td>
            <input type="search" name="user_email" id="user_email" class='form-control' placeholder="User email">
          </td>
          <%= hidden_field_tag 'admin_user_id', params[:admin_user_id] || nil %>
        </tr>
        <tr>
          <th> Email Status </th>
        </tr>
        <tr>
          <td>
            <%= select_tag 'email_status', email_filter_options, { class: "form-control", :prompt => "All" } %>
          </td>
        </tr>
 <!--        <tr>
          <th>Reseller</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td>
            <%#= select_tag :reseller_user_id, options_for_select(resellers_option), { class: 'form-control select-2', autocomplete: "off" } %>
          </td>
          <td></td>
          <td></td>
          <td></td>
        </tr> -->
      </table>
      <br/>
      <div class="ibox-footer">
        <div class="pull-right">
          <button class="btn btn-sm btn-primary search">Apply</button>
          <button class="btn btn-sm btn-danger reset">Reset</button>
        </div><br/>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'admin/list_filter' %>

<script>
  $(".select-2").select2({
    placeholder: 'Select a Reseller'
  });
</script>
