<%= form_with model: @user, url: admin_user_path(@user), local: true, class: 'form' do |f| %>
  <%= f.fields_for :address do |address_form| %>
    <div class="form-group col-lg-10">
      <%= address_form.label :country %>
      <%= address_form.text_field :country, class: 'form-control', style: 'width: 100%;', disabled: true %>
    </div>

    <div class="form-group col-lg-10">
      <%= address_form.label :state %>
      <%= address_form.text_field :state, class: 'form-control', style: 'width: 100%;' %>
    </div>

    <div class="form-group col-lg-10">
      <%= address_form.label :city %>
      <%= address_form.text_field :city, class: 'form-control', style: 'width: 100%;' %>
    </div>

    <div class="form-group col-lg-10">
      <%= address_form.label :street_address %>
      <%= address_form.text_field :street_address, class: 'form-control', style: 'width: 100%;' %>
    </div>
  <% end %>

  <div class="form-group col-lg-10">
    <%= f.submit (f.object.new_record? ? t('create') : t('update')), class: 'btn btn-primary' %>
  </div>
<% end %>
