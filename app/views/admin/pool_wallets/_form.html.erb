<%= form_with url: transfer_admin_admin_user_pool_wallets_path(current_admin_user), local: true, class: 'form' do |f| %>

  <div class="form-group col-lg-10">
    <h4><%= t('wallets.available_amount') %> (metamask users) <%= format_currency(amount: @balance) %></h4>
  </div>

  <div class="form-group col-lg-10">
    <%= label_tag :reciever_address %>
    <%= f.text_field :reciever_address, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-lg-10">
    <%= label_tag :amount %>
    <%= f.number_field :amount, class: 'form-control', id: 'wallet_amount', style: 'width: 100%;', step: 0.000001, min:0, required: true %>
  </div>

  <div class="form-group col-lg-10 walletBtnGroup">
    <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
      <%= t('transfer') %>
      <span class="fa fa-arrow-circle-o-down"></span>
    <% end %>
  </div>
<% end %>
