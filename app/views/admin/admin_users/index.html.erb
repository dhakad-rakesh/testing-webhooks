<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <!-- <h2><%#= is_sub_admin_tab?(params[:role]) ? t('sub_admins.sub_admin') : t('resellers.agents') %></h2>   -->
    <h2>Affiliates</h2>
    <h3><%= "#{@user&.full_name} (#{@user&.email})" if @user.present? %></h3>
  </div>
  <div class="col-lg-2">
    <div class="back-btn">
      <%= link_to :back, class: 'btn btn-primary' do %>
        <span class="fa fa-arrow-circle-o-left"></span> Back
      <% end %>
    </div>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <%= render 'admin_users_filter' %>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>List</h5>
          <% unless current_admin_user.affiliate? %>
            <div class="ibox-tools">
              <%= link_to t('affiliates.create_new'), new_admin_admin_user_path, class: "btn btn-primary btn-sm" %>
              <% if false %>
                <% if is_sub_admin_tab?(params[:role]) %>
                  <%= link_to t('sub_admins.create_new'), new_admin_admin_user_path(role: params[:role]), class: "btn btn-primary btn-sm" %>
                <% else %>
                  <%= link_to t('resellers.create_new'), new_admin_admin_user_path, class: "btn btn-primary btn-sm" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="ibox-content">
          <div class="table-responsive" id="users_list">
            <%= render partial: 'admin/admin_users/list' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
