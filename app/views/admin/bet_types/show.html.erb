<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('bet_type') %></h2>
  </div>
  <div class="col-lg-2">
    <div class="back-btn">
      <%= link_to :back, class: 'btn btn-primary' do %>
        <span class="fa fa-arrow-circle-o-left"></span> Back
      <% end %>
    </div>
  </div>

</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
                <tr>
                  <th><%= t('id') %></th>
                  <th><%= t('name') %></th>
                  <th><%= t('play_type') %></th>
                  <th><%= t('actions') %></th>
                </tr>
              </thead>
              <tbody>
                <tr class="gradeX">
                  <td><%= @bet_type.id %></td>
                  <td><%= @bet_type.name %></td>
                  <th><%= @bet_type.play_types.pluck(:name).to_sentence %></th>
                  <td>
                    <%= link_to t('edit'), edit_admin_bet_type_path(@bet_type) %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
