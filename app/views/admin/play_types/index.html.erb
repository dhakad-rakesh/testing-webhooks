<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('play_types') %></h2>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <%= link_to t('create_title', name: t('play_type')), new_admin_play_type_path %>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
                <tr>
                  <th><%= t('id') %></th>
                  <th><%= t('name') %></th>
                  <th><%= t('actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @play_types.each do |play_type| %>
                  <tr class="gradeX">
                    <td><%= play_type.id %></td>
                    <td><%= play_type.name %></td>
                    <td class="center">
                      <%= link_to t('show'), admin_play_type_path(play_type) %>
                      <%= link_to t('edit'), edit_admin_play_type_path(play_type) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= will_paginate @play_types %>
</div>
