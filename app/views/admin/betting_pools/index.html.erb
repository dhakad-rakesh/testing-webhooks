<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('pools') %></h2>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <%= link_to t('create_title', name: t('pool')), new_admin_betting_pool_path %>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
                <tr>
                  <th><%= t('id') %></th>
                  <th><%= t('name') %></th>
                  <th><%= t('status') %></th>
                  <th><%= t('admin.betting_pools.entry_amount') %></th>
                  <th><%= t('admin.betting_pools.points_per_user') %></th>
                  <th><%= t('admin.betting_pools.winnings_distribution_method') %></th>
                  <th><%= t('actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @betting_pools.each do |pool| %>
                  <tr class="gradeX">
                    <td><%= pool.id %></td>
                    <td><%= pool.name %></td>
                    <td><%= pool.status %></td>
                    <td><%= pool.entry_amount %></td>
                    <td><%= pool.points_per_user %></td>
                    <td><%= pool.winnings_distribution_method %></td>
                    <td>
                      <%= link_to t('view_title', name: t('pool')), admin_betting_pool_path(pool) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
