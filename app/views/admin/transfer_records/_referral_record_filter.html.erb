<div class="col-lg-12">
  <div class="ibox float-e-margins listing-filter">
    <div class="ibox-title">
      <h5>Filter</h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>
      </div>
    </div>
    <div class="ibox-content" style="display: block;">
      <table class="filter-table">
        <tr>
          <th>Data Range</th>
          <th>Referrer ID</th>
          <th>Referee ID</th>
          <th></th>
        </tr>
        <tr>
          <td>
            <%= text_field_tag :filter_date, nil, class: 'date-range form-control', placeholder: 'Select date range', data: { behavior: 'daterangepicker' }, autocomplete: "off" %>
            <%= hidden_field_tag :start_date, nil, class: 'start-date' %>
            <%= hidden_field_tag :end_date, nil, class: 'end-date' %>
          </td>
          <td>
            <%= text_field_tag :referrer_id, nil, class: 'form-control', placeholder: 'Referrer ID', autocomplete: "off" %>
          </td>
          <td>
            <%= text_field_tag :referee_id, nil, class: 'form-control', placeholder: 'Referee ID', autocomplete: "off" %>
          </td>
        </tr>

        <tr>
          <th>Min Threshold Amount</th>
          <th>Max Threshold Amount</th>
          <th>Min Reward Amount</th>
          <th>Max Reward Amount</th>
        </tr>
        <tr>
          <td>
            <input type="search" name="threshold_min_amt" id="threshold_min_amt" class='form-control only-numeric' placeholder="Min threshold amount">
          </td>
          <td>
            <input type="search" name="threshold_max_amt" id="threshold_max_amt" class='form-control only-numeric' placeholder="Max threshold amount">
          </td>
          <td>
            <input type="search" name="reward_min_amt" id="reward_min_amt" class='form-control only-numeric' placeholder="Min reward amount">
          </td>
          <td>
            <input type="search" name="reward_max_amt" id="reward_max_amt" class='form-control only-numeric' placeholder="Max reward amount">
          </td>
        </tr>
      </table>
      <br/>
      <div class="ibox-footer">
        <div class="pull-right">
          <button class="btn btn-sm btn-primary search">Apply</button>
          <button class="btn btn-sm btn-danger reset">Reset</button>
        </div><br/>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'admin/list_filter' %>

<script>
  $('.search').on('click', () => {
    const path = '/admin/transfer_records'
    const data = {
      query: {
        referrer_id: $("#referrer_id").val(),
        referee_id: $("#referee_id").val(),
        filter_date: $("#filter_date").val(),
        start_date: $("#start_date").val(),
        end_date: $("#end_date").val(),
        threshold_min_amt: $("#threshold_min_amt").val(),
        threshold_max_amt: $("#threshold_max_amt").val(),
        reward_min_amt: $("#reward_min_amt").val(),
        reward_max_amt: $("#reward_max_amt").val()
      }
    }

    getAjaxLoad(path, data, '.referral-record-list')
  });

  $('.reset').on('click', () => {
    $("#referrer_id").val('');
    $("#referee_id").val('');
    $("#filter_date").val('');
    $("#start_date").val('');
    $("#end_date").val('');
    $("#threshold_min_amt").val('');
    $("#threshold_max_amt").val('');
    $("#reward_min_amt").val('');
    $("#reward_max_amt").val('');
    $('.search').trigger('click');
  });
</script>
