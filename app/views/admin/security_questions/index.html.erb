<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2 class="col-lg-4" ><%= t('security_quess') %></h2>
    <div id='pagination' class='col-lg-offset-6 col-lg-2'>
      <%= will_paginate @security_questions %>
    </div>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">

        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
                <tr>
                  <th><%= t('id') %></th>
                  <th><%= t('question') %></th>
                  <th><%= t('enabled') %></th>
                  <th><%= t('actions') %></th>
                </tr>
              </thead>
              <tbody>
                <% @security_questions.each do |question| %>
                  <tr class="gradeX">
                    <td><%= question.id %></td>
                    <td><%= question.question %></td>
                    <td class="center">
                      <div class="i-checks">
                        <label>
                          <input class='enabled_question' type="checkbox" value="" <%= "checked" if question.enabled%> data="match_<%= question.id %>">
                          <i></i>
                        </label>
                      </div>
                    </td>
                    <td><%= link_to t('delete'), admin_security_question_path(question.id), method: :delete %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
           <h5><%= t('create_title', name: t('question')) %></h5>
        </div>
        <div class="ibox-content">
          <%= form_for SecurityQuestion.new, url: admin_security_questions_path, html: { class: 'form-inline'} do |f| %>
            <div class="form-group col-lg-10">
                <%= f.text_field :question, class: 'form-control', style: 'width: 100%;' %>
            </div>
              <%= f.submit t('forms.create'), class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
