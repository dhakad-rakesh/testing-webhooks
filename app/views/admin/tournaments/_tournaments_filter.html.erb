<div class="col-lg-12">
  <div class="ibox float-e-margins listing-filter">
    <div class="ibox-title">
      <h5>Filter</h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>
      </div>
    </div>
    <div class="ibox-content" style="display: block;">
      <%= form_with(url: search_admin_tournaments_path, method: "get") do %>
        <table class="filter-table">
          <tr>
            <th>Sport</th>
            <th>Name</th>
            <th>Country</th>
            <th>Enabled</th>
          </tr>
          <tr>
            <td>
              <%= select_tag 'sport_id', grouped_options_for_select(sports_options, params[:sport_id]), { class: "form-control", :prompt => "All" } %>
            </td>
            <td>
              <%= text_field_tag 'name', '', :placeholder => "Search by Name", class: 'form-control' %>
            </td>
            <td>
              <%= select_tag 'country_id', options_for_select(countries_options, params[:country_id]), { class: "form-control", :prompt => "All" } %>
            </td>
            <td>
              <%= select_tag 'enabled', options_for_select(enable_options, params[:enabled]), { class: "form-control", :prompt => "All" } %>
            </td>
          </tr>
        </table>
        <br/>
        <div class="ibox-footer">
          <div class="pull-right">
            <button type="submit" class="btn btn-primary btn-search" tabindex="0" aria-controls="DataTables_Table_0"><span>Search</span></button>
            <a href="#-" class="btn btn-default btn-reset" tabindex="0" aria-controls="DataTables_Table_0"><span>Reset</span></a>
          </div><br/>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'admin/tournaments' %>
