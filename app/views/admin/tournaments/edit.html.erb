<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('tournament') %></h2>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-6">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5><%= t('edit_title', name: t('tournament')) %>
        </div>
        <div class="ibox-content">
          <% url = @sport.present? ? admin_sport_tournament_path(@sport, @tournament) : admin_tournament_path(@tournament) %>

          <%= form_with model: @tournament, url: url, local: true do |f| %>
            <div class="form-group col-lg-10">
              <%= f.label :name %>: 
              <b><%= @tournament.name %></b>
              <br>
            </div>

            <div class="form-group col-lg-10">
              <%= f.label :display_name %>
              <%= f.text_field :display_name, class: 'form-control', style: 'width: 100%;' %>
              <br>
            </div>

            <div class="form-group col-lg-10">
              <%= f.label :rank %>
              <%= f.number_field :rank, class: 'form-control', min: 1, style: 'width: 100%;' %>
              <br>
            </div>

            <div class="form-group col-lg-10">
              <%= f.submit t('save'), class: 'btn btn-primary' %>
              <%= link_to admin_tournaments_path, class: 'btn btn-danger' do %>
                Cancel
              <% end %>
            </div>
          <% end %>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</div>
