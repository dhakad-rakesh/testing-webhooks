<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('admin.transactions.deposits_requests') %></h2>
  </div>
  <div class="col-lg-2">
    <div class="back-btn">
      <%= link_to :back, class: 'btn btn-primary' do %>
        <span class="fa fa-arrow-circle-o-left"></span> Back
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <%= render "deposits_requests_filter" %>
  </div>
  
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>List</h5>
          <div class="ibox-tools">
          </div>
        </div>
        <div class="ibox-content" id="requests-list">
          <%= render 'deposits_requests_list', ledgers: @ledgers %>
        </div>
      </div>
    </div>
  </div>
</div>
