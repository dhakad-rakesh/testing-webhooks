<div class="col-lg-12">
  <div class="ibox float-e-margins listing-filter">
    <div class="ibox-title">
      <h5>Filter</h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>
      </div>
    </div>
    <div class="ibox-content" style="display: block;">
      <table class="filter-table">
        <tr>
          <th>Date Range</th>
          <th>Promo ID</th>
          <th>Name</th>
          <th>Promo Code</th>
        </tr>
        <tr>
          <td>
            <%= text_field_tag :filter_date, nil, class: 'date-range form-control', placeholder: 'Select date range', data: { behavior: 'daterangepicker' }, autocomplete: "off" %>
            <%= hidden_field_tag :start_date, nil, class: 'start-date' %>
            <%= hidden_field_tag :end_date, nil, class: 'end-date' %>
          </td>
          <td>
            <%= text_field_tag :promo_id, nil, class: 'form-control', placeholder: 'Promo ID', autocomplete: "off" %>
          </td>
          <td>
            <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Name', autocomplete: "off" %>
          </td>
          <td>
            <%= text_field_tag :promo_code, nil, class: 'form-control', placeholder: 'Promo code', autocomplete: "off" %>
          </td>
        </tr>
      </table>
      <div class="ibox-footer">
        <div class="pull-right">
          <button class="btn btn-sm btn-primary search">Apply</button>
          <button class="btn btn-sm btn-danger reset">Reset</button>
        </div><br/>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'admin/list_filter' %>

<script>
  $('.search').on('click', () => {
    const path = '/admin/promo_codes'
    const data = {
      query: {
        promo_id: $("#promo_id").val(),
        name: $("#name").val(),
        filter_date: $("#filter_date").val(),
        start_date: $("#start_date").val(),
        end_date: $("#end_date").val(),
        promo_code: $("#promo_code").val(),
        promo_status: $("#promo_status").val(),
        promo_kind: $("#promo_kind").val()
        // valid_till_date: $("#valid_till_date").val(),
        // start_valid_date: $("#start_valid_date").val(),
        // end_valid_date: $("#end_valid_date").val()
      }
    }

    getAjaxLoad(path, data, '.promo-codes-list')
  });

  $('.reset').on('click', () => {
    $("#promo_id").val('');
    $("#name").val('');
    $("#filter_date").val('');
    $("#start_date").val('');
    $("#end_date").val('');
    $("#promo_code").val('');
    $("#promo_status").val('');
    $("#promo_kind").val('');
    // $("#valid_till_date").val('');
    // $("#start_valid_date").val('');
    // $("#end_valid_date").val('');
    $('.search').trigger('click');
  });
</script>
