<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('slot_game.management') %></h2>
    <h3><%= "#{@admin_user&.full_name} (#{@admin_user&.email})" if @admin_user.present? %></h3>
  </div>
  <div class="col-lg-2">
    <div class="back-btn">
      <%= link_to :back, class: 'btn btn-primary' do %>
        <span class="fa fa-arrow-circle-o-left"></span> Back
      <% end %>
    </div>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div>
            <%= form_with(url: request.url, method: "get", html: { onsubmit: 'searchSlotGame(event)' }) do %>
              <%= text_field_tag(:query, nil ,class: "form-control query", value: params[:query], placeholder: 'Search slot games') %>
              <%= submit_tag("Search", class: "btn btn-primary search_btn") %>
            <% end %>
          </div>
          <br>
          <div class="table-responsive" id="users_list">
            <%= render partial: 'admin/slot_games/slot_games' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
