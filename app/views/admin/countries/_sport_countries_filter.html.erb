<div class="col-lg-12">
  <div class="ibox float-e-margins listing-filter">
    <div class="ibox-title">
      <h5>Filter</h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>
      </div>
    </div>
    <div class="ibox-content" style="display: block;">
      <table class="filter-table">
        <tr>
          <th>Sport</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td>
            <%= select_tag 'sport_id', grouped_options_for_select(sports_options, @sport.id), { class: "form-control sc-dropdown", data: { initial_value: @sport.id } } %>
          </td>
          <td></td>
          <td></td>
        </tr>
      </table>
      <br/>
      <div class="ibox-footer">
        <div class="pull-right">
          <button class="btn btn-sm btn-primary search">Apply</button>
          <button class="btn btn-sm btn-danger reset">Reset</button>
        </div><br/>
      </div>
    </div>
  </div>
</div>

<script>
  $('.search').on('click', () => {
    const path = '/admin/countries'
    const data = {
      query: {
        sport_id: $("#sport_id").val()
      }
    }

    getAjaxLoad(path, data, '.sport_country_list')
  });

  $('.reset').on('click', () => {
    $("#sport_id").val($("#sport_id").data('initial-value'));
    $('.search').trigger('click');
  });
</script>
