<div class="col-lg-12">
  <div class="ibox float-e-margins listing-filter">
    <div class="ibox-title">
      <h5>Filter</h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>
      </div>
    </div>
    <div class="ibox-content" style="display: block;">
      <%= form_with(url: admin_advertisements_path, method: "get") do %>
        <table class="filter-table">
          <tr>
            <th>Name</th>
            <th>Enabled</th>
            <th>Ad Position</th>
            <th></th>
          </tr>
          <tr>
            <td>
              <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Name', autocomplete: "off" %>
            </td>
            <td>
              <%= select_tag :enabled, options_for_select([['Enabled', 'true'], ['Disabled', 'false']]), { class: "form-control", :prompt => "All" } %>
            </td>
            <td>
              <%= select_tag :position, options_for_select(Advertisement::POSITIONS), { class: "form-control", :prompt => "All" } %>
            </td>
            <td>
            </td>
          </tr>
        </table>
        <br/>
        <div class="ibox-footer">
          <div class="pull-right">
            <button type="submit" class="btn btn-primary btn-search" tabindex="0" aria-controls="DataTables_Table_0"><span>Apply</span></button>
            <a href="#-" class="btn btn-default btn-reset" tabindex="0" aria-controls="DataTables_Table_0"><span>Reset</span></a>
          </div><br/>
        </div>
      <% end %>
    </div>
  </div>
</div>

