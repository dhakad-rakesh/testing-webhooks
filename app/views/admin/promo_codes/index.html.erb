<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('promo_codes') %></h2>
  </div>
  <div class="col-lg-2">
    <div class="back-btn">
      <%= link_to :back, class: 'btn btn-primary' do %>
        <span class="fa fa-arrow-circle-o-left"></span> Back
      <% end %>
    </div>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <%= render "promo_codes_filter" %>
  </div>
  
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>List</h5>
          <div class="ibox-tools">
            <%= link_to "Add Promo Code", new_admin_promo_code_path, class: "btn btn-primary btn-sm" %>
          </div>
        </div>
        <div class="ibox-content" id="promo-codes-list">
          <%= render 'promo_codes_list', promo_codes: @promo_codes %>
        </div>
      </div>
    </div>
  </div>
</div>
