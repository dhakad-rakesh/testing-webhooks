<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('market') %></h2>
  </div>
  <div class="col-lg-2">
    <div class="back-btn">
      <%= link_to :back, class: 'btn btn-primary' do %>
        <span class="fa fa-arrow-circle-o-left"></span> Back
      <% end %>
    </div>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th><%= t('id') %></th>
                  <th><%= t('status') %></th>
                  <th><%= t('name') %></th>
                  <th><%= t('display_name') %></th>
                  <th><%= t('specifier') %></th>
                  <th><%= t('bet_type') %></th>
                  <th><%= t('play_type') %></th>
                  <th colspan="2"><%= t('actions') %></th>
                </tr>
              </thead>
              <tbody>
                <tr class="gradeX">
                  <td><%= @market.id %></td>
                  <td><%= @market.status %></td>
                  <td><%= @market.name %></td>
                  <td><%= @market.fancy_name %></td>
                  <td><%= @market.specifier_text %></td>
                  <td><%= @market.bet_type&.name %></td>
                  <td><%= @market.play_type&.name %></td>
                  <% if @match.present? %>
                    <td><%= link_to t('edit'), edit_admin_match_market_path(@match, @market) %></td>
                  <% else %>
                    <td><%= link_to t('edit'), edit_admin_market_path(@market) %></td>
                  <% end %>
                  <td><%= link_to t('back'), admin_markets_path %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
