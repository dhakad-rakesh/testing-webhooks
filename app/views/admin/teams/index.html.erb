<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('teams') %></h2>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <%= link_to :back, class: 'btn btn-primary' do %>
            <span class="fa fa-arrow-circle-o-left"></span> Back
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
              <tr>
                <th><%= t('id') %></th>
                <th><%= t('name') %></th>
                <th><%= t('country_name') %></th>
                <th><%= t('acronym') %></th>
                <th><%= t('sport') %></th>
              </tr>
            </thead>
            <tbody>
              <% @teams.each do |team| %>
                <tr class="gradeX">
                  <td><%= team.id %></td>
                  <td><%= team.name %></td>
                  <td><%= team.country_name %></td>
                  <td class="center"><%= team.acronym %></td>
                  <td class="center"><%= Utility::Sport.info(team).name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= will_paginate @teams %>
</div>
