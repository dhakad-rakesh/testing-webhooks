<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('cms') %></h2>
  </div>
  <div class="col-lg-2">
    <div class="back-btn">
      <%= link_to admin_cms_templates_path, class: 'btn btn-primary' do %>
        <span class="fa fa-arrow-circle-o-left"></span> Back
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5><%= @cms_template.subject %> / <%= @cms_template.template_for.humanize %> / <%= @cms_template.schedule_at %> </h5>
          <div class="pull-right">
            <%= link_to t('edit'), edit_admin_cms_template_path(@cms_template) %>
          </div>
        </div>
        <div class="ibox-content">
          <div>
            <%= raw @cms_template.content %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
