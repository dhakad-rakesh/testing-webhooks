<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Topics</h2>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Enabled</th>
                </tr>
              </thead>
              <tbody>
                <% @topics.order(:name).each do |topic| %>
                  <tr class="gradeX">
                    <td class="center">
                      <%= topic.id %>
                    </td>
                    <td class="center">
                      <%= topic.name %>
                    </td>
                    <td class="center">
                      <div class="i-checks">
                        <label>
                          <input class='enabled_topic' type="checkbox" value="" <%= "checked" if topic.enabled %> data="topic_<%= topic.id %>">
                          <i></i>
                        </label>
                      </div>
                    </td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= will_paginate @topics %>
  <div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
         <h5>Add New Topic</h5>
      </div>
      <div class="ibox-content">
        <%= form_for Topic.new, url: admin_topics_path, html: { class: 'form-inline'} do |f| %>
          <div class="form-group col-lg-10">
              <%= f.text_field :name, class: 'form-control', style: 'width: 100%;' %>
          </div>
            <%= f.submit "Add", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
