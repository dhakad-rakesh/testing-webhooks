<% @items.each_with_index do |item, index| %>
  <div class='col-md-4 live-casino'>
    <div class='item-parent'>
      <div class="casino-game">
        <%= link_to image_tag(item.image, border: 0), redirect_path(item), { class: 'item-image' } %>
        <div class="play-options">
          <button class="casino-play-button" onclick="launchCasinoModal('<%= "#{redirect_path(item)}?live_casino=true" %>', '<%= item.has_lobby %>')">PLAY NOW
            <span>
              <i class="fa fa-long-arrow-right fa-4 pull-right" aria-hidden="true"></i>
            </span>
          </button>
          <!-- <button class="casino-play-button demo" >Free Play</button> -->
        </div>
        <div class="game-data">
        <div class="game-data-options">
          <div class="name"><%= item.name %></div>
          <div class="rating rating3 "></div> 
        </div>
        </div>
      </div>
    </div>
  </div>
  <% if (index+1)%3 == 0 %>
    <div class='clearfix'></div>
  <% end %>
<% end %>